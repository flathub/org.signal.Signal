{
    "app-id": "org.signal.Signal",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "signal",
    "separate-locales": false,
    "rename-desktop-file": "signal-desktop.desktop",
    "rename-icon": "signal-desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--nodevice=kvm",
        "--nodevice=shm",
        "--filesystem=xdg-desktop",
        "--filesystem=xdg-documents",
        "--filesystem=xdg-download",
        "--filesystem=xdg-music",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-public-share",
        "--filesystem=xdg-videos",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.freedesktop.portal.Background",
        "--own-name=org.kde.*"
    ],
    "modules": [
        {
            "name": "signal-desktop",
            "buildsystem": "simple",
            "build-commands": [
                "ar x signal-desktop_*.deb",
                "rm -f signal-desktop_*.deb",
                "tar xf data.tar.xz",
                "rm -f control.tar.gz data.tar.xz debian-binary",
                "cp -r usr/* opt/* $FLATPAK_DEST",
                "rm -rf /app/share/icons/hicolor/1024x1024/",
                "rm -rf usr opt",
                "chmod -R a-s,go+rX,go-w $FLATPAK_DEST/Signal",
                "install signal.sh $FLATPAK_DEST/bin/signal",
                "install -Dm644 -t $FLATPAK_DEST/share/metainfo $FLATPAK_ID.appdata.xml",
                "desktop-file-edit --set-key=Exec --set-value='signal %U' $FLATPAK_DEST/share/applications/signal-desktop.desktop"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://updates.signal.org/desktop/apt/pool/main/s/signal-desktop/signal-desktop_5.27.1_amd64.deb",
                    "sha256": "ac860f64731a825e5033b94919ca75d9220cc3e5674b74583cbdf59b013e1b7c",
                    "x-checker-data": {
                        "type": "debian-repo",
                        "package-name": "signal-desktop",
                        "root": "https://updates.signal.org/desktop/apt",
                        "dist": "xenial",
                        "component": "main"
                    }
                },
                {
                    "type": "script",
                    "dest-filename": "signal.sh",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "if [ -z \"$DISPLAY\" ] && [ -n \"$WAYLAND_DISPLAY\" ]; then",
                        "EXTRA_ARGS=\"--enable-features=UseOzonePlatform --ozone-platform=wayland\"",
                        "else",
                        "EXTRA_ARGS=\"\"",
                        "fi",
                        "exec zypak-wrapper /app/Signal/signal-desktop $EXTRA_ARGS \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "org.signal.Signal.appdata.xml"
                }
            ]
        }
    ]
}
